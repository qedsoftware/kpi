@font-face {
  font-family: "{{fontName}}";
  src: {{{src}}};
  font-weight: normal;
  font-style: normal;
}

{{baseSelector}},
[class^="{{classPrefix}}"] {
  font-family: "{{fontName}}";
  font-style: normal;
  font-weight: normal;
}

{{baseSelector}}::before,
[class^="{{classPrefix}}"]::before,
[class*=" {{classPrefix}}"]::before {
  font-family: "{{fontName}}" !important;
  font-style: normal;
  font-weight: normal;
  speak: none;
  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  text-align: center;
  /* For safety - reset parent styles, that can break glyph codes */
  font-variant: normal;
  text-transform: none;
  /* fix buttons height, for twitter bootstrap */
  line-height: 1em;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

{{#each codepoints}}
.{{../classPrefix}}{{@key}}::before {content: "\\{{this}}";}
{{/each}}